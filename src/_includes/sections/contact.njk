<section id="contact" class="contact-section scroll-mt-16 reveal-section">
  <h2 class="section-title text-2xl font-display font-bold mb-6 after:content-[''] after:block after:w-16 after:h-1 after:bg-neutral-900 after:dark:bg-white after:mt-2">Contact</h2>
  
  <div class="contact-info mb-8">
    <p class="mb-4">Feel free to reach out for opportunities or collaborations:</p>
    
    <ul class="contact-list space-y-3">
      {% if contact.email %}
      <li class="flex items-center gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-neutral-700 dark:text-neutral-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        <a href="mailto:{{ contact.email }}" class="hover:underline">{{ contact.email }}</a>
      </li>
      {% endif %}
      
      {% if contact.workEmail %}
      <li class="flex items-center gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-neutral-700 dark:text-neutral-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        <a href="mailto:{{ contact.workEmail }}" class="hover:underline">{{ contact.workEmail }}</a> <span class="text-sm text-neutral-500 dark:text-neutral-400">(Work)</span>
      </li>
      {% endif %}
      
      {% if contact.phone %}
      <li class="flex items-center gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-neutral-700 dark:text-neutral-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        <span>{{ contact.phone }}</span>
      </li>
      {% endif %}
      
      {% if contact.location %}
      <li class="flex items-center gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-neutral-700 dark:text-neutral-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <span>{{ contact.location }}</span>
      </li>
      {% endif %}
    </ul>
  </div>
  
  {% if contact.showForm %}
  <div class="contact-form">
    <h3 class="text-xl font-semibold mb-4">Send a Message</h3>
    
    <form name="contact" method="POST" data-netlify="true" class="space-y-4">
      <div class="form-group">
        <label for="name" class="block text-sm font-medium mb-1">Name</label>
        <input type="text" name="name" id="name" required 
          class="w-full px-4 py-2 border border-neutral-300 dark:border-neutral-700 rounded-md 
          bg-white dark:bg-neutral-800 focus:outline-none focus:ring-2 focus:ring-neutral-500
          dark:text-white">
      </div>
      
      <div class="form-group">
        <label for="email" class="block text-sm font-medium mb-1">Email</label>
        <input type="email" name="email" id="email" required
          class="w-full px-4 py-2 border border-neutral-300 dark:border-neutral-700 rounded-md
          bg-white dark:bg-neutral-800 focus:outline-none focus:ring-2 focus:ring-neutral-500
          dark:text-white">
      </div>
      
      <div class="form-group">
        <label for="message" class="block text-sm font-medium mb-1">Message</label>
        <textarea name="message" id="message" rows="4" required
          class="w-full px-4 py-2 border border-neutral-300 dark:border-neutral-700 rounded-md
          bg-white dark:bg-neutral-800 focus:outline-none focus:ring-2 focus:ring-neutral-500
          dark:text-white"></textarea>
      </div>
      
      <div>
        <button type="submit" 
          class="px-6 py-2 bg-neutral-900 text-white dark:bg-white dark:text-neutral-900
          font-medium rounded-md hover:bg-neutral-700 dark:hover:bg-neutral-200 transition-colors
          focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-neutral-500">
          Send Message
        </button>
      </div>
    </form>
  </div>
  {% endif %}
</section>