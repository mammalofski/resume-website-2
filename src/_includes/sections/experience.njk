<section id="experience" class="experience-section mb-16 scroll-mt-16 reveal-section">
  <h2 class="section-title text-2xl font-display font-bold mb-6 after:content-[''] after:block after:w-16 after:h-1 after:bg-neutral-900 after:dark:bg-white after:mt-2">Experience</h2>
  
  <div class="experience-list space-y-8">
    {% for job in experience %}
      <div class="experience-item group">
        <div class="flex flex-col md:flex-row md:items-baseline justify-between mb-2">
          <h3 class="text-xl font-semibold">{{ job.title }}</h3>
          <p class="text-sm text-neutral-600 dark:text-neutral-400 font-medium">{{ job.period }}</p>
        </div>
        <p class="text-lg mb-2">{{ job.company }}</p>
        <div class="prose prose-neutral dark:prose-invert max-w-none">
          {{ job.description | safe }}
        </div>
        {% if job.achievements %}
          <ul class="mt-3 list-disc list-inside text-neutral-700 dark:text-neutral-300 space-y-1">
            {% for achievement in job.achievements %}
              <li>{{ achievement }}</li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>