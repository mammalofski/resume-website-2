<section id="education" class="education-section mb-16 scroll-mt-16 reveal-section">
  <h2 class="section-title text-2xl font-display font-bold mb-6 after:content-[''] after:block after:w-16 after:h-1 after:bg-neutral-900 after:dark:bg-white after:mt-2">Education</h2>
  
  <div class="education-list space-y-6">
    {% for edu in education %}
      <div class="education-item">
        <div class="flex flex-col md:flex-row md:items-baseline justify-between mb-1">
          <h3 class="text-lg font-semibold">{{ edu.degree }}</h3>
          <p class="text-sm text-neutral-600 dark:text-neutral-400">{{ edu.period }}</p>
        </div>
        <p class="text-base mb-1">{{ edu.institution }}</p>
        {% if edu.description %}
          <p class="text-neutral-700 dark:text-neutral-300">{{ edu.description }}</p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
  
  {% if certifications and certifications.length > 0 %}
    <div class="certifications-section mt-10">
      <h3 class="text-xl font-semibold mb-4">Certifications</h3>
      <div class="certifications-list grid grid-cols-1 sm:grid-cols-2 gap-4">
        {% for cert in certifications %}
          <div class="certification-item border border-neutral-200 dark:border-neutral-800 rounded-md p-3">
            <h4 class="font-medium">{{ cert.name }}</h4>
            <p class="text-sm text-neutral-600 dark:text-neutral-400">{{ cert.issuer }} â€¢ {{ cert.date }}</p>
          </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}
</section>